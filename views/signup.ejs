<%- include("partials/head"); -%>
</head>

<body>
  <div class="main-grid">
    <div class="header">
      <%- include("partials/header"); -%>
    </div>
    <main class="main">
      <div class="transparent-bg">
        <div class="signup-background"></div>
        <div class="signup-container">
          <div class="signup-card card-wrap">
            <img class="signup-img" src="/images/bailsBlep.jpg" />
            <h1 class="signup-header">SIGN UP</h1>
            <h2 class="signup-text">Please enter your email to receive more images of Bailey and Scout!</h2>
            <div class="form-container">
              <form class="form-signin" action="/signup" method="post">
                <label for="inputEmail" class="sr-only">Email address</label>
                <input type="email" id="inputEmail" name="userEmail" class="form-control" placeholder="Email address" required autofocus>
                <button class="signup-btn btn-color" type="submit">Bailey & Scout Pics!</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>
    <footer class="footer">
      <%- include("partials/footer"); -%>
    </footer>
  </div>
  <script src="..\js\animations.js"></script>
</body>
