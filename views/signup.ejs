<%- include("partials/header"); -%>
<section class="color-sec">
  <div class="container-fluid color-sec">
    <h1>Sign Up!</h1>
    <div class="card-signup">
      <form class="form-signin" action="/signup" method="post">
        <h1 class="h3 mb-3 font-weight-normal">Please sign up for more Bailey Pics!</h1>
        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="email" id="inputEmail" name="userEmail" class="form-control" placeholder="Email address" required autofocus>
        <button class="btn btn-md btn-dark btn-block" type="submit">Bailey Pics!</button>
      </form>
    </div>
  </div>
</section>
<%- include("partials/footer"); -%>
