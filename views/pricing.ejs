<%- include("partials/header"); -%>
<div class="container-fluid color-sec">
  <div class="pricing-header mx-auto text-center">
    <h1>Pricing</h1>
    <p class="lead">Below are three pricing options for more pictures of Bailey</p>
  </div>
</div>
<div class="container-fluid color-sec">
  <div class="card-deck mb-3 text-center">
    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal">Example 1</h4>
      </div>
      <div class="card-body bg-light">
        <h1 class="card-title pricing-card-title">$5 <small class="text-muted">/ mo</small></h1>
        <ul class="list-unstyled mt-3 mb-4">
          <li>4 Pictures of Bailey / mo</li>
        </ul>
        <button type="button" class="btn btn-lg btn-block btn-outline-primary price-btn">Sign up</button>
      </div>
    </div>
    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal">Example 2</h4>
      </div>
      <div class="card-body bg-light">
        <h1 class="card-title pricing-card-title">$10 <small class="text-muted">/ mo</small></h1>
        <ul class="list-unstyled mt-3 mb-4">
          <li>10 pictures of Bailey / mo</li>
        </ul>
        <button type="button" class="btn btn-lg btn-block btn-primary">Sign up</button>
      </div>
    </div>
    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal">Example 3</h4>
      </div>
      <div class="card-body bg-light">
        <h1 class="card-title pricing-card-title">$15 <small class="text-muted">/ mo</small></h1>
        <ul class="list-unstyled mt-3 mb-4">
          <li>20 pictures of Bailey / mo</li>
        </ul>
        <button type="button" class="btn btn-lg btn-block btn-primary">Sign up</button>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer"); -%>
